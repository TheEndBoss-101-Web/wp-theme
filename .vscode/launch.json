    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Sage Dev Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/bud",
            "args": ["dev"],
            "autoAttachChildProcesses": true,
            "console": "integratedTerminal",
            "runtimeExecutable": null,
            "runtimeArgs": [],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Build Sage",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/bud",
            "args": ["build"],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "production"
            }
        }
    ]
}